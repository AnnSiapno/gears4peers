<h1>Search Results</h1>

<% if @results.empty? %>
  <p> No results found  </p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @results.each do |listing| %>
        <tr>
          <td><%= listing.title %></td>
          <td><%= listing.price %></td>
          <td><%= listing.description %></td>
          <td><%= listing.longitude %></td>
          <td><%= listing.latitude %></td>
          <td><%= listing.address %></td>
          <td><%= listing.city %></td>
          <td><%= listing.state %></td>
          <td><%= listing.country %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


<%= render 'layouts/footer' %>
