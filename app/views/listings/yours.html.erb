<h1>Listings</h1>


    <% if @your_listings.empty? %>
      <p>No Listings</p>
    <% else %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Description</th>
          <th>Longitude</th>
          <th>Latitude</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @your_listings.each do |listing| %>
        <tr>
          <td><%= listing.title %></td>
          <td><%= listing.price %></td>
          <td><%= listing.description %></td>
          <td><%= listing.longitude %></td>
          <td><%= listing.latitude %></td>
          <td><%= listing.address %></td>
          <td><%= listing.city %></td>
          <td><%= listing.state %></td>
          <td><%= listing.country %></td>
          <td><%= link_to 'Show', listing %></td>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

<br>

<%= link_to 'New Listing', new_listing_path %>


<%= render 'layouts/footer' %>
